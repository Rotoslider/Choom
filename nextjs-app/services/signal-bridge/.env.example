# Signal Bridge - Environment Configuration
# Copy this to .env and fill in your values

# ─── Signal ─────────────────────────────────────────────────
# The Choom's phone number (registered with signal-cli)
SIGNAL_PHONE_NUMBER=+1YOUR_CHOOM_NUMBER
# Your personal phone number (receives messages from Chooms)
OWNER_PHONE_NUMBER=+1YOUR_PHONE_NUMBER

# signal-cli paths
SIGNAL_CLI_PATH=/usr/local/bin/signal-cli
SIGNAL_CONFIG_PATH=$HOME/.local/share/signal-cli

# ─── Choom API ──────────────────────────────────────────────
CHOOM_API_URL=http://localhost:3000

# ─── LLM ────────────────────────────────────────────────────
LLM_ENDPOINT=http://localhost:1234/v1

# ─── Services ───────────────────────────────────────────────
STT_ENDPOINT=http://localhost:5000
TTS_ENDPOINT=http://localhost:8004
MEMORY_ENDPOINT=http://localhost:8100

# ─── Weather ────────────────────────────────────────────────
OPENWEATHER_API_KEY=
DEFAULT_WEATHER_LOCATION=Your City, ST
DEFAULT_WEATHER_LAT=0.0
DEFAULT_WEATHER_LON=0.0

# ─── Search ─────────────────────────────────────────────────
BRAVE_API_KEY=

# ─── Ngrok (optional, for external access) ──────────────────
NGROK_URL=https://your-subdomain.ngrok-free.app
NGROK_WEBHOOK_SECRET=

# ─── Defaults ───────────────────────────────────────────────
# Must match a Choom name in the database
DEFAULT_CHOOM_NAME=Choom
# Your name (used in morning briefings)
OWNER_NAME=friend

# ─── Logging ────────────────────────────────────────────────
LOG_LEVEL=INFO
