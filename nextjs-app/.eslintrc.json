{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "no-unused-vars": "off"
  },
  "ignorePatterns": [".next/", "node_modules/"]
}
